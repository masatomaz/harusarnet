<h1>Communities#new</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">

    <%= form_for(@community, html: {class: "form-horizontal" }) do |f| %>

      <div class="form-group">
        <%= f.label :name, 'コミュニティ名', class: "control-label col-sm-2" %>
        <div class="col-sm-10">
          <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control" %>
        </div>
      </div>
      
      <div class="form-group">
        <%= f.label :description, 'コミュニティ説明', class: 'control-label col-sm-2' %>
        <div class="col-sm-10">
          <%= f.text_area :description, class: 'form-control' %>
        </div>
      </div>
  
      <div class="form-group">
        <%= f.label :image, '画像', class: 'control-label col-sm-2' %>
        <div class="col-sm-10">
          
          <%= f.file_field :image, class: 'form-control' %>
        </div>
      </div>


      <div class="actions col-sm-offset-2">
        <%= f.submit "コミュニティ作成", class: 'btn btn-default' %>
      </div>
    <% end %>
  </div>
</div>